{% extends 'CGCHomeBundle::layoutBasic.html.twig' %}
{% block title %}
    {{ product.name }} | CGC Rolamentos
{% endblock %}

{% block metacontent %}
    {{ product.description }}
{% endblock %}
 
{% block keywords %}
    {{ product.name }}
{% endblock %}

{% block body %}
    <section>
            
            <div class="container">
                <div class="col-md-6">
                    <h1>{{ product.name }}</h1>
                    {% if product.category %}
                        <h4><em>{{ product.category.name }}</em></h4>
                    {% endif %}
                    <p>{{ product.description }}</p>
                    <div class="center-text">
                        <div class="call-to-action">
                            <span class=" glyphicon glyphicon-ok"></span> 
                            {{ content['btn_orcamento'] }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    {% if product.image %}
                        <img class="image-responsive" src="{% path product.image, 'big' %}" alt="{{ product.name }}"/>
                    {% endif %}  
                    
                    
                </div>
            </div>
        </section>
        <div id="overlay"></div>
        <div id="orcamento">
            <h1>{{ content['formulario_titulo'] }}</h1>
            <div class="close-button"></div>
            <form id="contact-form" role="form" method="post" action="{{ path('contact') }}">
                <div class="form-group">
                    <label for="input-nome">Nome</label>
                    <input type="text" class="form-control" id="input-nome" placeholder="Digite seu nome" required name="name">
                </div>
                <div class="form-group">
                    <label for="input-telefone">Telefone</label>
                    <input type="text" class="form-control" id="input-telefone" placeholder="Digite seu telefone de contato" required name="phone">
                </div>
                <div class="form-group">
                    <label for="input-email">Email</label>
                    <input type="email" class="form-control" id="input-email" placeholder="Digite seu email" required name="email">
                </div>
                <div class="form-group">
                    <label for="input-empresa">Empresa</label>
                    <input type="text" class="form-control" id="input-empresa" placeholder="Digite sua empresa" name="company">
                </div>
                <label for="input-mensagem">Mensagem</label>
                <textarea id="input-mensagem" class="form-control" rows="3" name="message" required name="message"></textarea>
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-envelope"></span> 
                    Enviar
                </button>
                <div id="contact-response"></div>
            </form>
        </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}