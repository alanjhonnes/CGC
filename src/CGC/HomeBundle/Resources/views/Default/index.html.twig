<!DOCTYPE html>
<html>
    <head>
        <title>{{ content['titulo_site'] }}</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <!-- Optional theme -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <!-- Latest compiled and minified JavaScript -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li id="btn-home"><!--<img src="images/logo.png" alt="CGC"/>-->{{ content['menu_1'] }}</li>
                    <li id="btn-rolamentos">{{ content['menu_2'] }}</li>
                    <li id="btn-mancais">{{ content['menu_3'] }}</li>
                    <li id="btn-contato">{{ content['menu_4'] }}</li>
                </ul>
            </nav>
        </header>
        <section id="home">
            <div class="container section-content">
                <div class='row'>
                    <div class='col-md-6'>
                        <img class='img-independant img-responsive' src='img/main-image.jpg' alt=''/>
                    </div>
                    <div class='col-md-6'>
                        <img class='img-independant img-responsive' src='img/main-image-2.jpg' alt=''/>
                    </div>
                    <div class='col-md-12'>
                        <h1>{{ content['secao_1_titulo'] }}</h1>
                        {{ content['secao_1_conteudo']}}
                    </div>
                </div>
                <h1>{{ content['secao_1_marcas'] }}</h1>
                <div id="logos" class='row'>
                    {% for brand in brands %}
                    <div class="logo-wrapper col-md-3 col-xs-6">
                        <img class='img-responsive' src="{% path brand.logo, 'medium' %}" alt="{{brand.name}}"/>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <div class="section-divisor">
            <div class="divisor-middle"></div>
        </div>
        <section id="rolamentos">
            <div class="container section-content">
                <div class="row">
                    <h1>{{ content['secao_2_titulo'] }}</h1>
                    <div class="col-md-4">
                        <article>
                            {{ content['rolamento_imagem_1'] }}
                            <h3>{{ content['rolamento_nome_1'] }}</h3>
                            <p>{{ content['rolamento_texto_1']}}</p>
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article>
                            {{ content['rolamento_imagem_2'] }}
                            <h3>{{ content['rolamento_nome_2'] }}</h3>
                            <p>{{ content['rolamento_texto_2']}}</p>
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article>
                            {{ content['rolamento_imagem_3'] }}
                            <h3>{{ content['rolamento_nome_3'] }}</h3>
                            <p>{{ content['rolamento_texto_3']}}</p>
                        </article>
                    </div>
                    <div class="center-text">
                        <div class="call-to-action">
                            <span class=" glyphicon glyphicon-ok"></span> 
                            {{ content['btn_orcamento'] }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="section-divisor">
            <div class="divisor-middle"></div>
        </div>
        <section id="mancais">
            <div class="container section-content">
                <div class="row">
                    <h1>Mancais</h1>
                    <div class="col-md-4">
                        <article>
                            {{ content['mancal_imagem_1'] }}
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article>
                            {{ content['mancal_imagem_2'] }}
                        </article>
                    </div>
                    <div class="col-md-4">
                        <article>
                            {{ content['mancal_imagem_3'] }}
                        </article>
                    </div>
                    <div class="col-md-12">
                        <p>
                            {{ content['mancal_texto'] }}
                        </p>
                    </div>
                    <div class="center-text">
                        <div class="call-to-action">
                            <span class=" glyphicon glyphicon-ok"></span> 
                            {{ content['btn_orcamento'] }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="section-divisor">
            <div class="divisor-middle"></div>
        </div>
        <section id="contato">
            <div class="container section-content">
                <div class="row">
                    <h1>{{ content['contato_titulo'] }}</h1>
                    <div class="col-md-6">
                        <address>
                            {{ content['contato_dados'] }}
                        </address>
                        <p><a href="mailto:{{ content['contato_email'] }}">{{ content['contato_email'] }}</a></p>
                        <div class="call-to-action">
                            <span class=" glyphicon glyphicon-ok"></span> 
                            {{ content['btn_orcamento'] }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id='map'>
                            <iframe frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Rua+Freire+da+Silva,+203+-+Cambuci,+SP,+Brazil&amp;aq=0&amp;oq=Rua+Freire+da+Silva,+203+-+Cambuci&amp;sll=-23.564363,-46.615709&amp;sspn=0.001514,0.002468&amp;ie=UTF8&amp;hq=&amp;hnear=Rua+Freire+da+Silva,+203+-+Cambuci,+S%C3%A3o+Paulo,+01523-020,+Brazil&amp;ll=-23.564142,-46.615869&amp;spn=0.012037,0.019741&amp;t=m&amp;z=14&amp;output=embed"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="overlay"></div>
        <div id="orcamento">
            <h1>{{ content['formulario_titulo'] }}</h1>
            <div class="close-button"></div>
            <form role="form" method="post">
                <div class="form-group">
                    <label for="input-nome">Nome</label>
                    <input type="text" class="form-control" id="input-nome" placeholder="Digite seu nome">
                </div>
                <div class="form-group">
                    <label for="input-telefone">Telefone</label>
                    <input type="text" class="form-control" id="input-telefone" placeholder="Digite seu telefone de contato">
                </div>
                <div class="form-group">
                    <label for="input-email">Email</label>
                    <input type="email" class="form-control" id="input-email" placeholder="Digite seu email">
                </div>
                <div class="form-group">
                    <label for="input-empresa">Empresa</label>
                    <input type="text" class="form-control" id="input-empresa" placeholder="Digite sua empresa">
                </div>
                <label for="input-mensagem">Mensagem</label>
                <textarea id="input-mensagem" class="form-control" rows="3" name="message"></textarea>
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-envelope"></span> 
                    Enviar
                </button>
            </form>
        </div>
        <script src="{{ asset('js/jquery-1.11.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/gsap/TweenMax.js') }}"></script>
        <script src="{{ asset('js/gsap/plugins/ScrollToPlugin.js') }}"></script>
        <script src="{{ asset('js/vendor/jquery.nicescroll.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    </body>
</html>